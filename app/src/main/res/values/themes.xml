<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CovidTracker" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/grey_white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/dimmed_black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.App.Splash" parent="Theme.SplashScreen">
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/app_logo</item>
        <item name="android:windowSplashScreenAnimationDuration">750</item>
        <item name="windowSplashScreenBackground">@color/dimmed_black</item>
        <item name="postSplashScreenTheme">@style/Theme.CovidTracker</item>
    </style>

    <style name="Theme.CovidTracker.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:titleTextColor">?attr/colorOnPrimary</item>
    </style>

    <style name="DrawerIconStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">?attr/colorOnPrimary</item>
    </style>

    <style name="Theme.CovidTracker.ActionBarStyle" parent="android:style/Widget.Holo.Light.ActionBar">
        <item name="android:titleTextColor">?attr/colorOnPrimary</item>
    </style>

    <style name="Theme.CovidTracker.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.CovidTracker.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>